@using ShopApp.Entity.Concrete
@model List<OrderDetail>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sipariş Detayları</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-hover text-nowrap">
                    <tbody>
                        <tr>
                            <th> Ödeme Türü</th>
                            <td>@ViewBag.payment.PaymentType</td>
                        </tr>
                        <tr>
                            <th>Toplam Tutar</th>
                            <td>@ViewBag.payment.Price</td>
                        </tr>
                        <tr>
                            <th>Tarih</th>
                            <td>@(((DateTime)ViewBag.payment.Date).ToString("dd-MMM-yyyy"))</td>
                        </tr>

                    </tbody>
                </table>
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sipariş Detayları</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-hover text-nowrap">
                    <tbody>
                        <tr>
                            <th> Ad Soyad</th>
                            <td>@ViewBag.customer.Firstname - @ViewBag.customer.LastName</td>
                        </tr>
                        <tr>
                            <th>İl</th>
                            <td>@ViewBag.customer.City</td>
                        </tr>

                    </tbody>
                </table>
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sipariş Detayı</h3>

                
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Açıklaması</th>
                            <th>Adet</th>
                            <th>Birim Fiyatı</th>
                            <th>Tutar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width: 10px">@item.Id</td>
                                <td style="width: %40">@item.Product.ProductName</td>
                                <td>@item.Product.Description</td>
                                <td><span class="tag tag-success">@item.Quantity</span></td>
                                <td><span class="tag tag-success">@item.Product.Price</span></td>
                                <td><span class="tag tag-success">@(item.Quantity * item.Product.Price)</span></td>
                                <td style="width: 40px">
                                    <a href="/Product/UpdateProduct/@item.Id" class="btn btn-success"> Düzenle</a>
                                    <a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger"> Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                            <td>Toplam</td>
                            <td> ***</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

