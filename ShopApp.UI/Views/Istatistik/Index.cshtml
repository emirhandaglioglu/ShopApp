
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="mb-2 mt-4">İstatistikler</h5>
<div class="row">
    <div class="col-lg-4 col-6 ">
        <!-- small card -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.CategoryListCount</h3>

                <p>Toplam kategori sayısı</p>
            </div>
            <div class="icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <a href="/Category/Index" class="small-box-footer">
                Kategorileri Gör <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-4 col-6">
        <!-- small card -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.productListCount</h3>

                <p>Ürünler tablosunda "Bilgisayar" kategorisine ait ürün sayısı</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-4 col-6">
        <!-- small card -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.containA</h3>

                <p>Ürün adında 'A' harfi geçen ürünlerin sayısı</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-4 col-6">
        <!-- small card -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.maxProductofCategory</h3>

                <p>En fazla ürüne sahip kategori </p>
            </div>
            <div class="icon">
                <i class="fas fa-chart-pie"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-6">
        <!-- small card -->
        <div class="small-box bg-primary">
            <div class="inner">
                <h3>@ViewBag.IsActive</h3>

                <p>Durumu true olan kategoriler ile false olan kategoriler arasındaki sayısal fark</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->
