@model ShopApp.Entity.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Kategori Ekle</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="card card-outline card-info">
                            <label>Kategori Adı</label>
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Kategori Adı" })
                            @Html.ValidationMessageFor(x => x.CategoryName)

                        </div>
                        <div class="card card-outline card-info">
                            <!-- /.card-header -->
                            <div class="card-body pad">
                                <label>Açıklama</label>
                                <div class="mb-3">
                                    @Html.TextAreaFor(x => x.Description, new
                               {
                                   @style = "width: 100%; height: 300px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"
                               })
                                    @Html.ValidationMessageFor(x => x.Description)

                                </div>
                            </div>
                        </div>

                        <div class="clearfix">
                            <button class="btn btn-info float-right"><i class="fas fa-plus"></i> Kaydet</button>
                        </div>
                    </div>
                }
                <!-- /.form-group -->
            </div>
            <!-- /.col -->

        </div>

        <!-- /.row -->
    </div>
    <!-- /.card-body -->
</div>
