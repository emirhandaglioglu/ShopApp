
@using ShopApp.Entity.Concrete
@model List<Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategoriler</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width:150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Kategori Açıklaması</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width: 10px">@item.Id</td>
                                <td style="width: %40">@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td><span class="tag tag-success">@item.IsActive</span></td>
                                <td style="width: 40px">
                                    <a href="/Category/UpdateCategory/@item.Id" class="btn btn-success"> Düzenle</a>
                                    <a href="/Category/DeleteCategory/@item.Id" class="btn btn-danger"> Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <a href="~/Category/AddCategory" class="btn btn-info float-right"><i class="fas fa-plus"></i> Kategori Ekle</a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

